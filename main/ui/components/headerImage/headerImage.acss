.header {
  box-sizing: border-box;
  position: sticky;
  width: 100%;
  top: 0;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  border-radius: 0 0 15px 15px;
  box-shadow: 0 3rpx 5rpx 5rpx rgba(0, 0, 0, 0.25);
  background-image: linear-gradient(to right, #313a41, #040f16);
  z-index: 999;
}

.header image {
  margin-top: 10%;
  width: 45%;
  height: 45%;
}
